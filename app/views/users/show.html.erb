<h1><%= @user.full_name %></h1>
<%= render 'friend_options', object: @user if current_user != @user %>
<%= render 'shared/post_form' if current_user == @user %>

<h2>Friends <%= "(#{@user.friends.count})" %></h2>
	<ul>
		<% @user.friends.each do |friend| %>
			<li><%= link_to friend.full_name, friend %></li>
		<% end %>
	</ul>

<h2><%= "#{@user.full_name}'s Posts:" %></h2>
<%= render @user.posts %>
